# Development Settings
DEBUG=True
DEVELOPMENT_MODE=True
SECRET_KEY=your-secret-key-here

# CORS and Hosts
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGIN_WHITELIST=http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database settings (Supabase PostgreSQL) - Only used when DEVELOPMENT_MODE=False
DATABASE_URL=postgresql://postgres:your-db-password@db.your-supabase-url.supabase.co:5432/postgres

# Supabase settings (for file storage)
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_KEY=your-supabase-api-key
SUPABASE_BUCKET=sewabazaar

# Khalti Payment Gateway Configuration (Sandbox)
KHALTI_PUBLIC_KEY=your-khalti-public-key
KHALTI_SECRET_KEY=your-khalti-secret-key
KHALTI_BASE_URL=https://dev.khalti.com/api/v2
KHALTI_ENVIRONMENT=sandbox

# Email (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=SewaBazaar <noreply@sewabazaar.com>

# File Storage
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

